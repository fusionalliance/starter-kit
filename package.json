{
  "name": "starter-kit",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:scss": "node-sass 'assets/scss' -o 'dist/assets/css' --output-style compressed",
    "dev": "nodemon -e js,scss --exec \"npm run lint\" --ignore dist",
    "pre-commit": "npm run lint",
    "lint": "npm run eslint && npm run stylelint",
    "eslint": "eslint 'assets/js/*.js'",
    "stylelint": "stylelint 'assets/scss/**/*.scss'",
    "scss": "npm run build:scss -- --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quicksolutions/starter-kit.git"
  },
